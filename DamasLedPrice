                            </div>
                            <input type="number" id="price-triple" min="1" value="100000">
                        </div>
                        
                        <!-- ألوان كاملة -->
                        <div class="price-input">
                            <label for="price-full">ألوان كاملة:</label>
                            <div class="currency-toggle">
                                <div class="currency-btn active" data-currency="syp" data-target="price-full">ل.س</div>
                                <div class="currency-btn" data-currency="usd" data-target="price-full">$</div>
