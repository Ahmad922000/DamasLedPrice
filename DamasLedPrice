    <script>
        // الأسعار الافتراضية لكل متر مربع
        let prices = {
            single: 50000,   // لون واحد
            double: 75000,   // لونين
            triple: 100000,  // 3 ألوان
            full: 150000,    // ألوان كاملة
            usdRate: 5000,   // سعر الصرف الافتراضي
            // إضافة معلومات العملة لكل سعر
            currency: {
                single: "syp",
                double: "syp",
                triple: "syp",
                full: "syp"
            }
        };
        
        // تحميل الأسعار المحفوظة إذا وجدت
        function loadPrices() {
            const savedPrices = localStorage.getItem('ledPrices');
            if (savedPrices) {
                const parsedPrices = JSON.parse(savedPrices);
                prices = {...prices, ...parsedPrices};
                
                document.getElementById('price-single').value = prices.single;
                document.getElementById('price-double').value = prices.double;
                document.getElementById('price-triple').value = prices.triple;
                document.getElementById('price-full').value = prices.full;
                document.getElementById('usd-rate').value = prices.usdRate;
                
                // تحديث أزرار العملة
                updateCurrencyButtons();
            }
            updateExamples();
        }
        
        // تحديث أزرار العملة بناءً على البيانات المحفوظة
        function updateCurrencyButtons() {
            const types = ['single', 'double', 'triple', 'full'];
            types.forEach(type => {
                const buttons = document.querySelectorAll(`[data-target="price-${type}"]`);
                buttons.forEach(btn => {
                    if (btn.dataset.currency === prices.currency[type]) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            });
        }
        
        // حفظ الأسعار
        function savePrices() {
            // تحديث معلومات العملة أولاً
            const types = ['single', 'double', 'triple', 'full'];
            types.forEach(type => {
                const activeBtn = document.querySelector(`[data-target="price-${type}"].active`);
                if (activeBtn) {
                    prices.currency[type] = activeBtn.dataset.currency;
                }
            });
            
            // تحويل الأسعار المدخلة بالدولار إلى ليرة سورية إذا لزم الأمر
            types.forEach(type => {
                const inputValue = parseFloat(document.getElementById(`price-${type}`).value);
                if (prices.currency[type] === "usd") {
                    prices[type] = inputValue * prices.usdRate;
                } else {
                    prices[type] = inputValue;
                }
            });
            
            prices.usdRate = parseInt(document.getElementById('usd-rate').value) || 5000;
            
            localStorage.setItem('ledPrices', JSON.stringify(prices));
            alert('تم حفظ الأسعار وسعر الصرف بنجاح!');
            updateExamples();
            
            // تحديث واجهة المستخدم لعرض الأسعار بالليرة السورية
            document.getElementById('price-single').value = prices.single;
            document.getElementById('price-double').value = prices.double;
            document.getElementById('price-triple').value = prices.triple;
            document.getElementById('price-full').value = prices.full;
            
            // تعيين جميع أزرار العملة إلى الليرة السورية
            const allButtons = document.querySelectorAll('.currency-btn');
            allButtons.forEach(btn => {
                if (btn.dataset.currency === "syp") {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // تحديث حالة العملة في الكائن prices
            types.forEach(type => {
                prices.currency[type] = "syp";
            });
        }
        
        // تبديل العملة
        function toggleCurrency(button) {
            const target = button.dataset.target;
            const currency = button.dataset.currency;
            
            // إزالة النشاط من جميع الأزرار في نفس المجموعة
            const buttons = document.querySelectorAll(`[data-target="${target}"]`);
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // إضافة النشاط للزر المحدد
            button.classList.add('active');
            
            // إذا تم التبديل إلى الدولار، تحويل القيمة
            const input = document.getElementById(target);
            const currentValue = parseFloat(input.value);
            const usdRate = parseFloat(document.getElementById('usd-rate').value) || 5000;
            
            if (currency === "usd") {
                // تحويل من ليرة سورية إلى دولار
                input.value = (currentValue / usdRate).toFixed(2);
            } else {
                // تحويل من دولار إلى ليرة سورية
                input.value = Math.round(currentValue * usdRate);
            }
        }
        
        // إضافة مستمعي الأحداث لأزرار العملة
        document.addEventListener('DOMContentLoaded', function() {
            const currencyButtons = document.querySelectorAll('.currency-btn');
            currencyButtons.forEach(button => {
                button.addEventListener('click', function() {
                    toggleCurrency(this);
                });
            });
        });
        
        // تحديث الأمثلة بناءً على الأسعار الحالية
        function updateExamples() {
            // مثال 1: شاشة 50x50 سم لون واحد
            const area1 = (50 * 50) / 10000; // تحويل إلى متر مربع
            const example1SYP = Math.round(area1 * prices.single);
            const example1USD = Math.round(example1SYP / prices.usdRate);
            
            document.getElementById('example1-syp').textContent = example1SYP.toLocaleString() + ' ل.س';
            document.getElementById('example1-usd').textContent = example1USD + ' $';
            
            // مثال 2: شاشة 100x70 سم ألوان كاملة
            const area2 = (100 * 70) / 10000;
            const example2SYP = Math.round(area2 * prices.full);
            const example2USD = Math.round(example2SYP / prices.usdRate);
            
            document.getElementById('example2-syp').textContent = example2SYP.toLocaleString() + ' ل.س';
            document.getElementById('example2-usd').textContent = example2USD + ' $';
            
            // مثال 3: شاشة 200x100 سم 3 ألوان
            const area3 = (200 * 100) / 10000;
            const example3SYP = Math.round(area3 * prices.triple);
            const example3USD = Math.round(example3SYP / prices.usdRate);
            
            document.getElementById('example3-syp').textContent = example3SYP.toLocaleString() + ' ل.س';
            document.getElementById('example3-usd').textContent = example3USD + ' $';
        }
        
        function calculatePrice() {
            // الحصول على القيم من المدخلات
            const width = parseFloat(document.getElementById('width').value);
            const height = parseFloat(document.getElementById('height').value);
            const colors = document.getElementById('colors').value;
            
            // التحقق من صحة المدخلات
            if (isNaN(width) || isNaN(height) || width <= 0 || height <= 0) {
                alert('يرجى إدخال أبعاد صحيحة');
                return;
            }
            
            // حساب المساحة بالمتر المربع
            const area = (width * height) / 10000;
            
            // تحديد السعر حسب عدد الألوان
            let pricePerMeter;
            switch(colors) {
                case '1':
                    pricePerMeter = prices.single;
                    break;
                case '2':
                    pricePerMeter = prices.double;
                    break;
                case '3':
                    pricePerMeter = prices.triple;
                    break;
                case 'full':
                    pricePerMeter = prices.full;
                    break;
                default:
                    pricePerMeter = prices.single;
            }
            
            // حساب السعر الإجمالي
            let totalPriceSYP = area * pricePerMeter;
            
            // إضافة تكلفة إضافية للشاشات الصغيرة
            if (area < 0.1) { // أقل من 0.1م²
                totalPriceSYP *= 1.2; // زيادة 20% للشاشات الصغيرة
            } else if (area > 10) { // أكبر من 10م²
                totalPriceSYP *= 0.9; // خصم 10% للشاشات الكبيرة
            }
            
            // حساب السعر بالدولار
            const totalPriceUSD = Math.round(totalPriceSYP / prices.usdRate);
            
            // عرض النتيجة
            document.getElementById('price').textContent = Math.round(totalPriceSYP).toLocaleString() + ' ل.س';
            document.getElementById('price-usd').textContent = totalPriceUSD + ' $';
            document.getElementById('result').style.display = 'block';
        }
        
        // تحميل الأسعار عند بدء التشغيل
        window.onload = loadPrices;
    </script>
</body>
</html>
